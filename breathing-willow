#!/usr/bin/env python3
from __future__ import annotations

import argparse
from breathing_willow import __version__


def main() -> None:
    parser = argparse.ArgumentParser(prog="breathing-willow", add_help=True)
    parser.add_argument(
        "--version",
        action="store_true",
        help="Show version and exit",
    )
    args = parser.parse_args()
    if args.version:
        print(f"breathing-willow version {__version__}")
        return

    # Import CLI and run
    from breathing_willow_cli.breathing_willow import main as cli_main
    cli_main()


if __name__ == "__main__":
    main()
